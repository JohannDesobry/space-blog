<%= form_for post do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
    
        <div class="form-group">
            <%= f.label :title, class: 'control-label label'%>
            <%= f.text_field :title, class: 'form-control input', placeholder: "Title of your article", type:"Text" %>
        </div>

        <div class="form-group">
            <%= f.label :body, class: 'control-label label' %>
            <%= f.text_area :body, class: 'form-control form-noodle textarea', rows: 6, placeholder: "Content of your article" %>
        </div>

        <%= f.submit 'Save', class: 'button is-link buttonbs' %>
<% end %>