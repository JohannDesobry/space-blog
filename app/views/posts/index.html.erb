    <div class="columns">
        <% @posts.each do |p| %>
        <div class="column">
            <div class="item">
                <%= link_to post_path(p.id) do %>
             <%= image_tag(p.avatar.url(:medium), class:"item-figure image is2by1") %>
                     <% end %>
            <div class="item-content">
                <div class="level">
                    <h2 class="title item-title"><%= link_to truncate(p.title, :length => 80), post_path(p.id) %></h2>
                </div>
                <div class="item-description">
                <p class="blog-body"><%= truncate(p.body, :length => 200) %></p>
                 <%= link_to "Read more", post_path(p.id), class:"is-primary" %>
                </div>
            </div>
            </div>
        </div>
        <% end %>
    </div>
    <div class="columns is-mobile is-centered">
       <div class="column is-half is-offset-4">
            <%= paginate(@posts) %>
        </div>
    </div>
